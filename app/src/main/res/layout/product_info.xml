<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hello"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".productInfo">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/whiteColor"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="3dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="41dp"
                android:layout_height="34dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/loc"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/heading"
                android:layout_width="161dp"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="37dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:text="Address"
                android:textAppearance="?android:attr/textAppearanceLarge"
                card_view:layout_constraintStart_toEndOf="@+id/imageView"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/content1"
                android:layout_width="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="12dp"
                android:text="content"
                android:textColor="@color/skyBlueColor"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/heading" />

            <ImageButton
                android:id="@+id/nextbtn"
                android:layout_width="43dp"
                android:layout_height="41dp"
                android:layout_marginStart="252dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/arrow"
                android:background="@color/whiteColor"
                card_view:layout_constraintStart_toStartOf="@id/content1"
                card_view:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/whiteColor"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="3dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="41dp"
                android:layout_height="34dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/phonecall"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/heading2"
                android:layout_width="161dp"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="37dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:text="Contact"
                android:textAppearance="?android:attr/textAppearanceLarge"
                card_view:layout_constraintStart_toEndOf="@+id/imageView2"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/content12"
                android:layout_width="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="12dp"
                android:text="content"
                android:textColor="@color/skyBlueColor"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/heading2" />

            <ImageButton
                android:id="@+id/nextbtn2"
                android:layout_width="43dp"
                android:layout_height="41dp"
                android:layout_marginStart="252dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/arrow"
                android:background="@color/whiteColor"
                card_view:layout_constraintStart_toStartOf="@id/content12"
                card_view:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/whiteColor"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="3dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="41dp"
                android:layout_height="34dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/clock"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/heading3"
                android:layout_width="161dp"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="37dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:text="Timings"
                android:textAppearance="?android:attr/textAppearanceLarge"
                card_view:layout_constraintStart_toEndOf="@+id/imageView3"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/content13"
                android:layout_width="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="12dp"
                android:text="content"
                android:textColor="@color/skyBlueColor"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/heading3" />

            <ImageButton
                android:id="@+id/nextbtn3"
                android:layout_width="43dp"
                android:layout_height="41dp"
                android:layout_marginStart="252dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/arrow"
                android:background="@color/whiteColor"
                card_view:layout_constraintStart_toStartOf="@id/content13"
                card_view:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>